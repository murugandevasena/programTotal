package pattern;

public class UpwardTrangle {
	public static void main(String[] args) {
		int x=5;
		
		 int i, j;
	        // outer loop to handle number of rows
	        for (i = 1; i <= x; i++) {
	            // inner loop to print space
	            for (j = 1; j <= x-i; j++) {
	                System.out.print(" ");
	            }
	            // inner loop to print star
	            for (j = 1; j <= i; j++) {
	                System.out.print(i + " ");
	            }
	            // print new line for each row
	            System.out.println();
	        }
		
	}

}
